@model Selection

@{
    ViewData["Title"] = "Brand";
    Layout = "_LayoutConfiguration.cshtml";
}

<div class="homecard homecard">

    <ul class="nav nav-tabs">
        <li class="nav-item randomtab">
            <a class="nav-link disabled">Country</a>
        </li>
        <li class="nav-item randomtab">
            <a class="nav-link active">Brand</a>
        </li>
        <li class="nav-item randomtab">
            <a class="nav-link disabled">Model</a>
        </li>
        <li class="nav-item randomtab">
            <a class="nav-link disabled">Type</a>
        </li>
        <li class="nav-item randomtab">
            <a class="nav-link disabled">Result</a>
        </li>
    </ul>

    <h2 class="randomheader">Select your Brand.</h2>

    <form class="randomform" asp-action="Model">
        <input hidden asp-for="SelectionId" />

        <div class="form-group randomformgroup">
            <select asp-for="SelectionBrandCode" asp-items="@ViewBag.Brands" class="form-control mx-auto"></select>
        </div>
        <div class="form-group randomformgroup">
            <button type="submit" class="btn btn-dark"><i class="fas fa-angle-right"></i>&nbsp&nbspSelect</button>
        </div>
    </form>
</div>